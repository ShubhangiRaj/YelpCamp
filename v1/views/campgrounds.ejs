<% include partials/header %>
<div class="container">
        <header class="jumbotron">
                <h1>Welcome to Yelp Camp!!</h1>
                <p>View our hand-picked campgrounds</p>
                <p>
                        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
                </p>
        </header>

        <div class="row">
            <% campgrounds.forEach(function (campgrounds) { %>
                <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                                <img src=" <%= campgrounds.img %>">
                                <div class="caption">
                                        <h4><%= campgrounds.name %></h4>
                                </div>
                        </div>

                </div>
            <% }) %>
        </div>

</div>


<% include partials/footer %>